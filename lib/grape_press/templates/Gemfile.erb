source 'https://rubygems.org'

gem 'grape', '~> 0.14.0'
<% if serializer == 'grape-entity' %>
gem 'grape-entity'
<% end %>
<% if serializer == 'active_model_serializers' %>
gem 'grape-active_model_serializers'
<% end %>
gem 'grape-swagger'
gem 'rack-cors'
gem 'rake'
<% if active_record %>gem 'activerecord', '~> 4.2'<% end %>
<% if database == 'pg' %>gem 'pg'<% end %>
<% if database == 'mysql' %>gem 'mysql2'<% end %>
<% if database == 'sqlite' %>gem 'sqlite3'<% end %>
<% if mongoid %>gem 'mongoid'<% end %>

group :development, :test do
  gem 'dotenv'
  gem 'rspec'
  gem 'rack-test'
  gem 'simplecov'
  gem 'simplecov-html'
  gem 'guard'
  gem 'guard-rspec', require: false
  gem 'rb-inotify', require: false
  gem 'rb-fsevent', require: false
  gem 'rb-fchange', require: false
  gem 'rubocop', require: false
  <% if active_record %>
  gem 'factory_girl'
  gem 'database_cleaner'
  <% end %>
end

